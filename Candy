class Solution {
    public int candy(int[] r) {
        int n=r.length; int[] L=new int[n]; Arrays.fill(L,1);
        for(int i=1;i<n;i++) if(r[i]>r[i-1]) L[i]=L[i-1]+1;
        int ans=L[n-1];
        for(int i=n-2;i>=0;i--){
            int cur=1;
            if(r[i]>r[i+1]) cur=L[i+1]+1;
            ans+=Math.max(cur,L[i]);
            L[i]=Math.max(L[i],cur);
        }
        return ans;
    }
}
